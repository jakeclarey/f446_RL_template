{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build all",
            "group": "build",
            "type": "shell",
            "command": "make",
            "args": [
                "all",
                "-j4"
            ]
        },
        {
            "label": "Build clean",
            "group": "build",
            "type": "shell",
            "command": "make",
            "args": [
                "clean"
            ]
        },
        {
            "label": "Flash controller",
            "group": "build",
            "type": "shell",
            "command": "st-flash",
            "args": [
                "--reset",
                "write",
                "./build/${workspaceFolderBasename}.bin",
                "0x08000000"
            ]
        }
    ]
}